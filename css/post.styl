@import "variables.styl";

section#blog-post, section#blog-index
{
    margin: 0 auto;
    
    @media all and (min-width: navMinWidth) {
        max-width: 83.33333333%;
        padding: containerPadding 0;
    }
    
    .post-meta
    {
        margin: 0 0 .5rem 0;
        font-size: 1.5rem;
        color: #9EABB3;
        
        &, a
        {
            color: #9EABB3;
            margin: 0 0 5px 0;
            font-family: 'Open Sans', sans-serif;
            font-size: 1.5rem;
        }
        
        &:not(.block)
        {
            display: inline-block;
        }
    }
    
    p
    {
        font-size: 2rem;
        color: #555;
        margin: 0 0 3rem 0;
        padding: 0;
        line-height: 1.6em;
    }
    
    .back
    {
        text-align: center;
        
        a
        {
            color: #337ab7;
            text-decoration: none;
            
            &:hover
            {
                text-decoration:underline;
            }
        }
    }
    
    .pagination {
        display: flex;
        margin: 4rem auto;
        font-family: 'Open Sans', sans-serif;
        font-size: 1.3rem;
        color: #9EABB3;
        
        .left, .middle, .right
        {
            flex: 1;
        }
        
        .middle
        {
            text-align: center;
        }
        
        .right
        {
            text-align: right;
        }
    }

    .older-posts, .newer-posts {
        padding: 5px 15px;
        border: #EBF2F6 2px solid;
        text-decoration: none;
        border-radius: 30px;
        transition: border ease 0.3s;
        
        &:hover
        {     
            border-color: #9EABB3;
        }
    }

    blockquote {
        display: block;
        margin: 0 0 2.8rem 0;
        padding: 0 2rem;
        background-color: #fafafa;
        border: 1px solid rgb(242, 242, 242);
        border-left: 5px solid rgb(238, 238, 238);
        
        p 
        {
            margin: 0;
            padding: 28px 0;
        }
    }

    .pagination a {
        color: #9EABB3;
        
        &:hover
        {
            text-decoration: none;
        }
    }

    .page-number {
        display: inline-block;
        padding: 2px 0;
        align-self: center;
    }

    .post, .post-excerpt
    {
        margin: 0 auto;
        padding-bottom: 4rem;
        
        &:first-child 
        {
            margin-top: 0;
        }
        
        &.post-excerpt 
        {
            border-bottom: 1px solid #EBF2F6;
            padding: 5rem 0;
            
            &:first-child
            {
                padding-top: 0;
            }
            
            p
            {
                line-height: 1.6em;
                margin: 0;
            }
            
            .post-title
            {
                font-size: 4rem;
                line-height: 1.2em;
                letter-spacing: -1px;
                text-indent: -2px;
                margin: 0 0 2rem 0;
                padding: 0;
            }
        }

        a 
        {
            color: #337ab7;
            transition: color ease 0.3s;
            background: transparent;
            text-decoration: none;
            
            &:hover, &:active
            {
                outline: 0;
            }
            
            &:hover
            {
                color: #57A3E8;
            }
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            color: #50585D;
            margin:  3.5rem 0;
            padding: 0;
            font-size: 2.5rem;
            font-weight: 700;
            
            a
            {
                color: #50585D;
            }
        }
        
        ol, ul 
        {
            margin: 0;
            padding: 0 0 0 5rem;
            
            li
            {
                font-size: 2rem;
                line-height: 1.6;
                color: #555;
                margin: 0 0 1.8rem;
                padding: 0; 
            }
        }

        hr 
        {
            margin: 4.8rem 0;
            border: 0;
            border-top: 1px solid rgba(6,8,8,.12);
            border-bottom: 1px solid rgba(255,255,255,.15);
        }

        img {
            display: block;
            height: auto;
            max-width: 100%;
            max-height: 600px;
            margin: 2.5rem auto;
            padding: 0;
            border: 1px solid #cccccc;
        }

        .gist {
            margin: 0;
            padding-bottom: 2.8rem;
        }

        pre 
        {
            margin-bottom: 2.8rem;
            font-size: 1.4rem;
            background-color: #f8f8f8;
            border: 1px solid #ccc;
            font-size: 13px;
            line-height: 19px;
            overflow: auto;
            padding: 6px 10px;
            border-radius: 3px;
            
            > code
            {
                margin: 0;
                padding: 0;
                white-space: pre-wrap;
                border: none;
                background: transparent;
            }
            
            code
            {
                color: inherit;
                font-size: 1.4rem;
            }
            
            code, tt 
            {
                background-color: transparent;
                border: none;
            }
        }
        
        code 
        {
            padding: 2px 4px;
            font-size: 1.4rem;
            background-color: #f9f2f4;
            border-radius: 4px;
            color: #c7254e;
        }
        
        pre, code, tt {
            font-size: 1.4rem;
            font-family: Consolas, "Liberation Mono", Courier, monospace;
        }

        code, tt 
        {
            margin: 0 0px;
            padding: 0px 0px;
            white-space: pre-wrap;
            border: 1px solid #eaeaea;
            background-color: #f8f8f8;
            border-radius: 3px;
        }

        kbd {
            -moz-border-bottom-colors: none;
            -moz-border-left-colors: none;
            -moz-border-right-colors: none;
            -moz-border-top-colors: none;
            background-color: #DDDDDD;
            background-image: linear-gradient(#F1F1F1, #DDDDDD);
            background-repeat: repeat-x;
            border-color: #DDDDDD #CCCCCC #CCCCCC #DDDDDD;
            border-image: none;
            border-radius: 2px 2px 2px 2px;
            border-style: solid;
            border-width: 1px;
            font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
            line-height: 10px;
            padding: 1px 4px;
        }
    }

    .post-footer 
    {
        margin: 0 0 4rem 0;
        padding: 4rem 0;
        border: #EBF2F6 1px solid;
        border-left: none;
        border-right:none;
        display:flex;
        
        h4 {
            font-size: 1.8rem;
            margin: 1.5rem 0;
            font-weight: 600;
            padding: 0;
        }

        p 
        {
            margin: 1.5rem 0;
            font-size: 1.6rem;
            line-height: 1.6em;
            padding: 0;
            
            &:last-child
            {
                padding-bottom: 0;
            }
        }
        
        .author
        {
            flex: 1;
        }

        .share 
        {
            flex: 1;
            text-align: right;
            
            a {
                font-size: 2.3rem;
                display: inline-block;
                margin: .5rem 0 .5rem 1.6rem;
                color: #BBC7CC;
                text-decoration: none;
                
                &:hover {
                    color: #50585D;
                }
            }
        }
        
        @media all and (max-width: navMaxWidth / 1.5)
        {
            display: block;
            
            .share
            {
                text-align: left;
                
                a
                {
                    margin: .5rem 1.6rem .5rem 0;
                }
            }
        }
    }

    @media only screen and (max-width: 500px) {
        .pagination {
            width: auto;
            margin-left: 16px;
            margin-right: 16px;
        }

        .older-posts,
        .newer-posts {
            position: static;
            margin: 10px 0;
        }

        .page-number {
            display: block;
        }
    }
}